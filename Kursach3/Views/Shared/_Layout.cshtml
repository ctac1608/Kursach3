<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body ng-app="createApp">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="~/Home/Index/"><img src="~/Content/Images/home.png" /></a></li>
                    @if (User.Identity.IsAuthenticated)
                    {<li><a href="~/Home/AdminPage/"><img src="~/Content/Images/crown.png" /></a></li>}
                </ul>
                
                    
                        <form ng-submit="search()">
                            <div class="search-wrapper" ng-controller="searchController">
                                <div class="input-holder">
                                    <input type="text" ng-modal="searchRow" ng-keyup="$event.keyCode == 13 && search()" class="search-input" placeholder="Type to search" />
                                    <img src="~/Content/Images/Day/lupa.png" style="padding:3px;" class="search-icon" onclick="searchToggle(this, event)"><span></span>
                                </div>
                                <span class="close" onclick="searchToggle(this, event);"></span>
                                <div class="result-container">
                                </div>
                            </div>
                        </form>
                    
                    
                    
                    
                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <br />
    <div class="container body-content">
        @RenderBody()
    </div>
    
    <div class="position-switches">
        <form action="">
            <fieldset>
                <span class="moon-sun">
                    <input type="checkbox" tabindex="32" name="ct0" id="ct0">
                    <label for="ct0">
                        <span></span>
                        <i class="cloud"></i>
                        <i class="stars"></i>
                    </label>
                </span>
            </fieldset>
        </form>

        @using (Html.BeginForm("ChangeCulture", "Default"))
        {
        <label class="toggleSwitch xlarge" onclick="">
            <input type="checkbox" />
            <span>
                <span>EN</span>
                <span>RU</span>
            </span>
            <a></a>
        </label>
        }
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angularApp")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/Search.js"></script>
</body>
</html>
