@{
    ViewBag.Title = "Index";
}


<div ng-app="createApp">
    
    <div class="user-data jumbotron" ng-controller="userDataController">
        <div class="avatar">
            <img src="~/Content/Images/user.png" class="img-rounded" />
        </div>
        <div>
            <div>
                <div class="login">{{user.Login}}</div>
                <a class="setting" href="/Manage/Index/">
                    <img src="~/Content/Images/pencil.png" />
                </a>
            </div>
            <div id="medal">
                <img class="medal" src="http://s1.iconbird.com/ico/1112/Onebit4/w48h481351852735010.png" />
                <img class="medal" src="http://s1.iconbird.com/ico/1112/Onebit4/w48h481351852735011.png" />
            </div>
        </div>
        <br />
        <br />
        <a id="email" href="mailto:{{user.Email}}">{{user.Email}}</a>
    </div>

    <div class="creatives jumbotron">

        <div id="creatives-header">
            <div id="add-dialog" ng-controller="addController">
                <img id="add" ng-click="toggleModal()" src="~/Content/Images/add.png" />
                <modal-dialog show='modalShown' width='80%' height='90%' >
     
                    <link href="~/Content/creating-style.css" rel="stylesheet" />
                    <div class="thismargin">
                        
                        <div class="form-group row">
                            <label for="example-text-input" class="col-xs-2 col-form-label">Name:</label>
                            <div class="col-xs-10">
                                <input class="form-control" type="text" placeholder="Название креатива" id="example-text-input">
                            </div>
                        </div>
                    </div>
                    
                        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                            <div class="margininput">
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingOne">

                                        <div class="form-group row">
                                            <div class="col-xs-10">
                                            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Название главы">
                                            </div>
                                            
                                                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                                    <img src="~/Content/Images/arrow.png" />
                                                </a>
                                            <a href="#chto-to"><img src="~/Content/Images/add24.png" style="margin-left:30px;"/></a>
                                        </div>
                                    </div>

                                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                        <div class="panel-body">
                                            <textarea class="form-control" id="Textarea" placeholder="Текст главы" rows="3"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>

                        <br />
                    <div class="col-md-offset-4 col-sm-offset-3 col-xs-offset-1" ng-click="hideModal()">
                        <button type="button" class="btn btn-default btn-lg">Сохранить креатив</button>

                    </div>
</modal-dialog>
            </div>
            

            <div class="sort btn-group btn-group-s" role="group" aria-label="...">
                <button type="button" class="btn btn-default">Left</button>
                <button type="button" class="btn btn-default">Middle</button>
                <button type="button" class="btn btn-default">Right</button>
            </div>
        </div>  

        <div class="creative">
            <p id="name">Name</p>
            <p class="date">Date</p>
            <p class="date">Date</p>
            <p>Rank</p>
        </div>

        <div class="creative">
            <p id="name">Name</p>
            <p class="date">Date</p>
            <p class="date">Date</p>
            <p>Rank</p>
        </div>

        <div class="creative">
            <p id="name">Name</p>
            <p class="date">Date</p>
            <p class="date">Date</p>
            <p>Rank</p>
        </div>

        <p id="point">.</p>
    </div>


</div>




<script src="~/Scripts/creating-script.js"></script>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/app.js"></script>
<script src="~/Scripts/Controllers/userPageController.js"></script>
<script src="~/Scripts/Services/userPageService.js"></script>
<script src="~/Scripts/Controllers/addController.js"></script>
<script src="~/Scripts/Controllers/createController.js"></script>
<script src="~/Scripts/Directives/modalDialog.js"></script>
