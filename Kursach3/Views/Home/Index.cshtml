@{
    ViewBag.Title = "Home Page";
}

<div ng-app="createApp">
        
    <h1 class="style-of-text-h1">Popular</h1>
    
    <div ng-controller="popularCreativeController" class="popular">
        
        <div ng-repeat="creative in creatives" class="creative-in-UserPage well">
            <p id="name" class="style-for-name">{{creative.Name}}</p>
            <hr />
            <div id="link-for-name" class="position-link">
                <a class="date">Имя чувака, чей это креатив</a>
            </div>
            <p class="date">Добавлен: {{creative.CreateData}}</p>
            @*<p class="date">{{creative.RedactData}}</p>*@
            <div id="rateYo"></div>
        </div>
    </div>
    <div style="clear:both"></div>
    <h1 class="style-of-text-h1">New</h1>
    
    <div ng-controller="newCreativeController" class="new">
        
        <div ng-repeat="creative in creatives" class="creative-in-UserPage well well-lg">
            
            <p id="name" class="style-for-name">{{creative.Name}}</p>
            <hr />
            <div id="link-for-name" class="position-link">
                <a class="date">Имя чувака, чей это креатив</a>
            </div>
            <p class="date">Добавлен: {{creative.CreateData}}</p>
            @*<p class="date">{{creative.RedactData}}</p>*@
            <div id="rateYo"></div>

        </div>
    </div>
        
</div>

